<!-- 全屏遮罩 -->

<div class="overlay" id="passwordOverlay">
    <script>
        var isAuthenticated = false; 
      
        if (!isAuthenticated) {
          var password = prompt("請輸入密碼", "")
          if (password === "1") {
            isAuthenticated = true; 
            document.getElementById('passwordOverlay').style.display = 'none';
