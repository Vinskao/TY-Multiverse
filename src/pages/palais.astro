---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const links = [
    "https://www.freecodecamp.org/certification/TianyiKao/javascript-algorithms-and-data-structures",
    "https://www.freecodecamp.org/certification/TianyiKao/data-visualization",
    "link3_url",
    "link4_url"
];
---

<!DOCTYPE html>
<html>
<head>
    <style>
        /* 全屏遮罩 */
        .overlay {
            display: none; /* 初始时不显示 */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9); /* 深黑色背景 */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 999; /* 确保在最顶层 */
        }
    </style>
</head>
<body>

<BaseLayout
    title="Palais | Wavo Yuropha"
    description="Learn about TY's most recent projects"
>
    <div class="stack gap-20">
        <main class="wrapper stack gap-8">
            <Hero
                title="Palais"
                tagline="See my most recent projects below to get an idea of my past experience."
                align="start"
            />
            
        </main>
    </div>
</BaseLayout>

<!-- 全屏遮罩 -->
<div class="overlay" id="passwordOverlay">
    <script>
        // Check if the user has already been authenticated
        var isAuthenticated = false; // Initially set to false
      
        if (!isAuthenticated) {
          var password = prompt("請輸入密碼", "")
          if (password === "123") {
            isAuthenticated = true; // Set the isAuthenticated flag to true
            // 隐藏遮罩
            document.getElementById('passwordOverlay').style.display = 'none';
          } else {
            alert('請再輸入一次密碼');
            location.href = 'examples/javascript/16ex2.html';
          }
        }
    </script>
</div>

</body>
</html>
