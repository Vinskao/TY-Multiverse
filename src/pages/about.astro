---
import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Calendar from "../components/Calendar.html";
---

<style>
  #adWall {
    display: flex;
  }

  .ad {
    flex: 0 0 auto;
    margin-right: 10px;
    transition: transform 0.3s;
    width: 200px;
  }

  h3 {
    color: #514695;
  }
  .item:hover::before {
    display: none;
  }
  .item:hover {
    display: block;
  }
  .collapsible {
    display: none;
    cursor: pointer;
    transition: color 0.3s;
    text-align: left;
    padding: 10px;
    font-weight: bolder;
    font-size: 20px;
    display: list-item;
    list-style-type: none;
    padding-left: -1.2em;
  }
  .collapsible:hover {
    color: #b133ff;
    cursor: pointer;
  }
  .collapsible:hover::after {
    display: inline;
    white-space: nowrap;
  }

  .collapsible-text {
    padding-left: 0.8em;
    font-size: 24px;
    display: block;
  }

  .collapsible-text:hover::after {
    content: " ▼";
    display: inline;
    white-space: nowrap;
  }

  .collapsible + .content[data-state="folded"] {
    display: block;
  }

  .collapsible + .content[data-state="unfolded"] {
    display: none;
  }

  .about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  img {
    margin-top: 1.5rem;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--gray-200);
  }

  .section-title {
    grid-column-start: 1;
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
  }

  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  @media (min-width: 50em) {
    .about {
      display: grid;
      grid-template-columns: 1fr 60% 1fr;
    }

    .about > :global(:first-child) {
      grid-column-start: 2;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }
  }
</style>
<body>
  <BaseLayout title="About | Tianyi Kao" description="About Tianyi Kao">
    <div class="stack gap-20">
      <main class="wrapper about">
        <Hero
          title="About"
          tagline="Thanks for stopping by. Read below to learn more about myself and my background."
        >
          <h6>Choose Your Date of Birth</h6>
          <div class="content">
            <Calendar />
          </div>
          <div id="adWall"></div>
          <button id="nextButton">Next</button>

          <script>
            document.addEventListener("DOMContentLoaded", () => {
              const adWall = document.getElementById("adWall");
              const nextButton = document.getElementById("nextButton");
              const numVisibleAds = 5;
              let currentImageIndex = 0;
              let isLoading = false;

              const imageList = [
                "/assets/poker/0.jpg",
                "/assets/poker/1.jpg",
                "/assets/poker/2.jpg",
                "/assets/poker/3.jpg",
                "/assets/poker/4.jpg",
                "/assets/poker/5.jpg",
                "/assets/poker/6.jpg",
                "/assets/poker/7.jpg",
                "/assets/poker/8.jpg",
                "/assets/poker/9.jpg",
                "/assets/poker/10.jpg",
                "/assets/poker/11.jpg",
                "/assets/poker/12.jpg",
                "/assets/poker/13.jpg",
                "/assets/poker/14.jpg",
                "/assets/poker/15.jpg",
                "/assets/poker/16.jpg",
                "/assets/poker/17.jpg",
                "/assets/poker/18.jpg",
                "/assets/poker/19.jpg",
                "/assets/poker/20.jpg",
              ];

              function createAdDiv(imageURL, linkURL, isClickable) {
                const adDiv = document.createElement("div");
                adDiv.className = "ad";
                const adLink = document.createElement("a");
                if (isClickable) {
                  adLink.href = linkURL;
                }
                const adImage = document.createElement("img");
                adImage.src = imageURL;
                adImage.width = 200;
                adLink.appendChild(adImage);
                adDiv.appendChild(adLink);
                return adDiv;
              }

              function loadAds() {
                adWall.innerHTML = "";
                // 遍歷要顯示的廣告數量（numVisibleAds）
                for (
                  let i = currentImageIndex;
                  i < currentImageIndex + numVisibleAds;
                  i++
                ) {
                  // 計算要顯示的圖片索引，並確保循環
                  const imageURL = imageList[i % imageList.length]; //i 除以 imageList.length 的餘數就是 i 本身。
                  const linkURL = `link${i + 1}.html`;
                  const isClickable = i === 2;
                  const adDiv = createAdDiv(imageURL, linkURL, isClickable);
                  adWall.appendChild(adDiv);
                }
                // 將 currentImageIndex 指向下一張圖片，進行循環
                currentImageIndex = (currentImageIndex + 1) % imageList.length;
                //使用 i % imageList.length 可以確保 i 的值在每次循環中都受限於圖片數組的索引範圍，並在達到 imageList.length 時從 0 開始
                isLoading = false;
              }

              function slideRight() {
                if (isLoading) {
                  return;
                }
                isLoading = true;
                loadAds();
              }

              nextButton.addEventListener("click", slideRight);
            });
          </script>

          <img
            width="1553"
            height="873"
            src="/assets/at-work.jpg"
            alt="Tianyi Kao at work with a colleague"
          />
        </Hero>

        <section>
          <h2 class="section-title">Background</h2>
          <div class="content">
            <p>
              In the financial industry, as the trend towards transforming into
              a technology-driven sector through data empowerment continues, I
              believe that moving towards becoming a developer is more like
              enhancing my own abilities. While my Fintech background helps with
              my choice of web-based backend and cloud development, my real
              drive comes from years of self-exploration and a passion for
              technology. I look forward to collaborating with you to overcome
              any challenges and create something exceptional.
            </p>
          </div>
        </section>
        <section>
          <h2 class="section-title">Education</h2>
          <div class="content">
            <div class="education-item" id="iSpan">
              <h3>iSpan</h3>
              <dl>
                <dt
                  class="collapsible"
                  id="collapsible-1"
                  style="list-style-type: none; text-indent: -1.2em;"
                  data-state="folded"
                >
                  <span class="collapsible-text"
                    >JavaEE Career Development Program</span
                  >
                </dt>
                <div class="content" data-state="folded" id="subfolder">
                  <li class="collapsible">Database</li>
                  <div class="content" data-state="folded">
                    <ul>
                      <li class="item">T-SQL</li>
                      <li class="item">Stored Procedure</li>
                      <li class="item">Transaction</li>
                    </ul>
                  </div>
                  <li class="collapsible">Java</li>

                  <div class="content" data-state="folded">
                    <ul>
                      <li class="item">JBDC</li>
                      <li class="item">Maven</li>
                    </ul>
                  </div>
                </div>
              </dl>
            </div>
            <div class="education-item">
              <h3>FreeCodeCamp.com</h3>
              <p>JavaScript Algorithms and Data Structures</p>
              <p>Data Visualization</p>
            </div>
            <div class="education-item">
              <h3>Hong Kong Polytechnic University</h3>
              <p>Master of Finance in Investment Management</p>
            </div>
            <div class="education-item">
              <h3>Fu Jen Catholic University</h3>
              <p>B.B.A. in Finance and International Business</p>
            </div>
            <div class="education-item">
              <h3>Temple University</h3>
              <p>Global Exchange Program</p>
            </div>
          </div>
        </section>
        <section>
          <h2 class="section-title">Skills</h2>
          <div class="content">
            <p>Working on it...</p>
          </div>
        </section>
      </main>

      <ContactCTA />
    </div>
  </BaseLayout>

  <script>
    //EventTarget.addEventListener() 方法将指定的监听器注册到 EventTarget 上，当该对象触发指定的事件时，指定的回调函数就会被执行。
    const subfolder = document.getElementById("subfolder");
    subfolder.style.display = "none";

    const UNFOLDED_STATE = "unfolded";
    const FOLDED_STATE = "folded";
    const delay = 0;

    const educationItems = document.querySelectorAll(".education-item");

    educationItems.forEach((educationItem) => {
      const collapsible = educationItem.querySelector(
        ".collapsible"
      ) as HTMLElement;
      const content = educationItem.querySelector(".content") as HTMLElement;

      let timeoutId: number | undefined;

      educationItem.addEventListener("mouseenter", () => {
        if (collapsible.dataset.state === UNFOLDED_STATE) {
          collapsible.dataset.state = FOLDED_STATE;
          content.dataset.state = FOLDED_STATE;
        }
      });

      educationItem.addEventListener("mouseleave", () => {
        if (timeoutId) {
          clearTimeout(timeoutId);
        }
        timeoutId = window.setTimeout(() => {
          collapsible.dataset.state = UNFOLDED_STATE;
          content.dataset.state = UNFOLDED_STATE;
        }, delay);
      });
    });

    const iSpan = document.getElementById("iSpan");

    iSpan.addEventListener("mouseenter", () => {
      subfolder.style.display = "block";
    });
    iSpan.addEventListener("mouseleave", () => {
      subfolder.style.display = "none";
    });
  </script>
</body>
